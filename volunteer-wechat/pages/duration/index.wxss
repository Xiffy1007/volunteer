page{
  background-color: #ededed;
}
.title{
  width: 96%;
  background-color: var(--themeColor);
  height: 300rpx;
  border: 1px solid var(--themeColor);
  border-radius: 20rpx;
  margin: 12rpx;

}
.word{
  text-align: center;
  line-height: 150rpx;
  background-color: white;
  border-radius: 20rpx;
  width:90% ;
  height: 180rpx;
  margin: 0 auto;
  color: var(--themeColor);
  font-weight: 600;
  font-size: 50rpx;
}
.title image{
  width: 150rpx;
height: 150rpx;
position: absolute;
z-index: 2;
display: block;
opacity: 0.6;
right: 0;
margin-right: 20rpx;
}
.order_main .order_item navigator{
  background-color: white;
  border: 1px solid white;
  border-radius: 20rpx;
  height: 200rpx;
  margin: 10rpx;
  position: relative;
}
.order_main .order_item navigator image{
width: 200rpx;
height: 200rpx;
position: absolute;
z-index: 2;
display: block;
opacity: 0.2;


}
.order_main .order_item .order_no_row {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 40rpx;
  font-size: 32rpx;
}


.order_main .order_item .order_time_row {
  margin:30rpx 20rpx;
  font-size: 20rpx;
  color: grey;
  text-align: right;
}
