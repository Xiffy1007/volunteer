
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 3;
}
.cates .cates_container .left_menu .menu_item {
  margin-top: 10rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  font-weight: bolder;
  color: var(--themeColor);
  border-left: 8rpx solid currentColor;
}
.right_content {
  flex: 8.5;
  background-color: #ededed
}
.product_list navigator{
  background-color: white;
  width: 100%;
  margin-bottom: 10rpx;
  height: 300rpx;
}
.right {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-top: 10rpx;
  width: 510rpx; 
}
.right image{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  z-index: 1;
display: block;
opacity: 0.2;
right: 0;
margin-top: 140rpx;
margin-right: 20rpx;
}
.content{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp: 2;
  text-align: center;
  height: 100rpx;
  font-size: 30rpx;
}
.other{
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
}

.product_list{
  display: flex;
   justify-content: space-between;
}
