/* pages/activity_detail/index.wxss */
page{
  background-color: var(--themeColor);
}


.act{
  width: 97%;
  height:620rpx;
  background-color: white;
  border-radius: 25rpx;
  margin: 20rpx 10rpx;
}
.info1{
width: 95%;
height: auto;
margin: 20rpx 30rpx;
}
.info2{
  margin: 10rpx 30rpx;
  font-size: 25rpx;
  color: gray;
}
.info2 image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;

}
.text{
  position: relative;
}
.p{
  background-color: var(--themeColor);
  height: 70rpx;
  width: 200rpx;
  line-height: 70rpx;
  text-align: center;
  color: white;
  font-weight: 600;
  font-size: 30rpx;
  position: absolute;
  right: 0;
  bottom: 100rpx;
  border-radius: 20px 0 0 20px;
  
}
.info3{
  width: 97%;
  height:auto;
  background-color: white;
  border-radius: 25rpx;
  margin: 20rpx 10rpx;
}
.info3 button{
  background-color: var(--themeColor);
  color: white;
  margin: 30rpx auto;
  
}
.order_main{
  width: 97%;
  height:auto;
  background-color: white;
  border-radius: 25rpx;
  margin: 20rpx 10rpx;
}
.order_main .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: #666;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.order_main .order_item .order_no_row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.order_main .order_item .order_price_row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.order_main .order_item .order_price_row .order_price_value {
  color: var(--themeColor);
  font-size: 32rpx;
}
.order_main .order_item .order_time_row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

