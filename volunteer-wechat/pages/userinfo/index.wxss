/* pages/userinfo/index.wxss */
.p1{
    background-color: var(--themeColor);
    height: auto;

}
.p2{
    background-color: white;
    border-radius: 70% 70% 0 0;
    margin-top: 150rpx;
    height: 150rpx;
}
.p3{
    background-color: white;
}
.user_info{
    width: 100%;
    position: absolute;
    margin:70rpx 0;
    font-size: 30rpx;
    text-align: center;
}
.user_icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.p4{
    display: flex;
    margin: 30rpx 0;
    padding-bottom: 20rpx;
    color: grey;
    font-size: 20rpx;
    
}
.p5{
    display: flex;
    margin-left: 15rpx;
    color: grey;
     font-size: 25rpx;
     margin-top: 70rpx;
}
.p5 image{
    width: 40rpx;
    height: 40rpx;
    margin-right:10rpx;
}
.left{
    flex: 4.5;
    display: flex;
   
}
.right{
    flex: 1;
    font-size: 20rpx;
}
.p6{
    background-color: #a8e0cf;
    border-radius: 20rpx;
    height: 200rpx;
    margin: 20rpx 15rpx;
    font-size: 27rpx;
}
.content{
    margin: 20rpx;
    padding-top: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    height: 135rpx;
    width: 90%;
    text-indent: 2em;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}
.time{
    font-size: 20rpx;
    float: right;
    margin-right: 25rpx;
    color: grey;
}
